<div class="max-w-md mx-auto py-12 px-4">
  <div class="glass p-8 md:p-10 rounded-3xl shadow-2xl relative">
    <div class="absolute -top-10 left-1/2 -translate-x-1/2 w-20 h-20 bg-emerald-500/20 rounded-2xl blur-2xl"></div>

    <div class="text-center mb-8">
      <h2 class="text-3xl font-black text-white italic tracking-tighter"><%= t('.sign_up') %></h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-6">

      <div>
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "example@email.com", class: "form-input" %>
      </div>

      <div>
        <div class="flex justify-between items-end mb-2">
          <%= f.label :password, class: "block text-sm font-bold text-slate-400" %>
          <% if @minimum_password_length %>
          <span class="text-[10px] text-slate-500 uppercase font-black tracking-widest"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></span>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "form-input" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "form-input" %>
      </div>

      <div>
        <%= f.submit t('.sign_up'), class: "btn-primary w-full py-4 rounded-2xl" %>
      </div>
    </div>
    <% end %>

    <div class="mt-8 pt-8 border-t border-white/5 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
