<div class="max-w-md mx-auto py-12 px-4">
  <div class="glass p-8 md:p-10 rounded-3xl shadow-2xl relative">
    <div class="absolute -top-10 left-1/2 -translate-x-1/2 w-20 h-20 bg-primary/20 rounded-2xl blur-2xl"></div>

    <div class="text-center mb-8">
      <h2 class="text-3xl font-black text-white italic tracking-tighter"><%= t('.forgot_your_password') %></h2>
      <p class="text-slate-500 text-sm mt-2">パスワードをリセットするための手順を送信します。</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-6">
      <div>
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@email.com", class: "form-input" %>
      </div>

      <div>
        <%= f.submit t('.send_me_reset_password_instructions'), class: "btn-primary w-full py-4 text-center rounded-2xl" %>
      </div>
    </div>
    <% end %>

    <div class="mt-8 pt-8 border-t border-white/5 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
