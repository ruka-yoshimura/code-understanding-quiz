<div class="max-w-md mx-auto py-12 px-4">
  <div class="glass p-8 md:p-10 rounded-3xl shadow-2xl relative">
    <div class="absolute -top-10 left-1/2 -translate-x-1/2 w-20 h-20 bg-primary/20 rounded-2xl blur-2xl"></div>

    <div class="text-center mb-8">
      <h2 class="text-3xl font-black text-white italic tracking-tighter"><%= t('.change_your_password') %></h2>
      <p class="text-slate-500 text-sm mt-2">新しいパスワードを設定してください。</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="space-y-6">
      <div>
        <%= f.label :password, t('.new_password'), class: "form-label" %>
        <% if @minimum_password_length %>
        <p class="text-[10px] text-slate-500 uppercase tracking-widest font-black mb-1">※<%= @minimum_password_length %>文字以上</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "••••••••", class: "form-input" %>
      </div>

      <div>
        <%= f.label :password_confirmation, t('.confirm_new_password'), class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "form-input" %>
      </div>

      <div>
        <%= f.submit t('.change_my_password'), class: "btn-primary w-full py-4 text-center rounded-2xl" %>
      </div>
    </div>
    <% end %>

    <div class="mt-8 pt-8 border-t border-white/5 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
