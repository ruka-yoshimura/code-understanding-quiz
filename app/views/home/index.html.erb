<% if user_signed_in? %>
<section class="mb-12">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <%# メインダッシュボード %>
    <div class="lg:col-span-2 flex flex-col gap-6">
      <div class="glass p-6 md:p-8 rounded-2xl">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">こんにちは、<%= current_user.display_name %> さん</h2>
            <div class="flex items-center gap-2">
              <span class="px-3 py-1 rounded-full text-xs font-bold <%= user_rank_class(current_user) %>" id="dashboard-user-title"><%= user_title(current_user) %></span>
              <p class="text-slate-400 text-sm">あなたのコード理解を深め、レベルアップを目指しましょう！</p>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-8">
          <div class="bg-white/5 p-4 rounded-xl border border-white/5">
            <div class="text-slate-400 text-xs mb-1 uppercase tracking-wider font-semibold">現在のレベル</div>
            <div class="text-3xl font-black text-white"><%= current_user.level %></div>
          </div>
          <div class="bg-white/5 p-4 rounded-xl border border-white/5">
            <div class="text-slate-400 text-xs mb-1 uppercase tracking-wider font-semibold">現在のXP</div>
            <div class="text-3xl font-black text-primary" id="dashboard-user-xp"><%= current_user.xp %></div>
          </div>
          <div class="bg-white/5 p-4 rounded-xl border border-white/5 col-span-2 md:col-span-1">
            <div class="text-slate-400 text-xs mb-1 uppercase tracking-wider font-semibold">連続回答</div>
            <div class="text-3xl font-black text-orange-400">🔥 <span id="dashboard-user-daily-streak"><%= current_user.daily_streak %></span> <span class="text-sm font-medium text-slate-500">日</span></div>
          </div>
        </div>

        <div class="bg-white/5 p-6 rounded-xl border border-white/5" id="user-xp-section">
          <div class="flex justify-between items-end mb-3">
            <span class="text-sm font-semibold text-slate-300">次のレベルまで</span>
            <span class="text-xs font-mono text-slate-400" id="dashboard-user-xp-percentage-text"><%= current_user.xp %> / <%= current_user.required_xp_for_next_level %> XP</span>
          </div>
          <div class="h-3 bg-slate-800 rounded-full overflow-hidden border border-white/5 shadow-inner">
            <div class="h-full bg-gradient-to-r from-primary to-blue-500 rounded-full transition-all duration-1000 shadow-[0_0_15px_rgba(56,189,248,0.5)]" id="dashboard-user-xp-progress-fill" style="width: <%= current_user.xp_progress_percentage %>%"></div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="glass p-6 rounded-2xl cursor-pointer group hover:border-primary/30 transition-all hover:bg-slate-800/80" onclick="location.href='<%= quizzes_path %>'">
          <div class="text-slate-400 text-xs mb-2 uppercase tracking-wider font-semibold">生成したクイズ</div>
          <div class="text-2xl font-bold text-white mb-2"><%= current_user.posts.joins(:quizzes).count %> <span class="text-sm font-normal text-slate-500">問</span></div>
          <div class="text-sm text-primary group-hover:translate-x-2 transition-transform">履歴を見る →</div>
        </div>
        <div class="glass p-6 rounded-2xl cursor-pointer group hover:border-accent/30 transition-all hover:bg-slate-800/80 border-accent/10" onclick="location.href='<%= official_posts_path %>'">
          <div class="text-accent text-xs mb-2 uppercase tracking-wider font-semibold">公式ドリル</div>
          <div class="text-2xl font-bold text-white mb-2">挑戦する</div>
          <div class="text-sm text-accent group-hover:translate-x-2 transition-transform">ドリル一覧へ →</div>
        </div>
      </div>
    </div>

    <%# 側面のアクションエリア %>
    <div class="flex flex-col gap-6">
      <div class="glass p-6 rounded-2xl relative overflow-hidden group">
        <div class="absolute -right-4 -top-4 text-6xl opacity-10 group-hover:scale-110 transition-transform">📊</div>
        <h3 class="text-xl font-bold text-white mb-4">学習分析</h3>
        <div class="flex flex-col gap-4 mb-6">
          <%
             total_answers = current_user.quiz_answers.count
             incorrect_quizzes_count = current_user.weak_quizzes.count
             correct_rate = total_answers > 0 ? ((total_answers - current_user.quiz_answers.where(correct: false).count).to_f / total_answers * 100).round : 0
          %>
          <div class="flex justify-between items-center bg-white/5 p-3 rounded-lg border border-white/5">
            <span class="text-slate-400 text-sm">総回答数</span>
            <span class="font-bold text-white text-lg"><%= total_answers %> <span class="text-xs font-normal text-slate-500 ml-1">回</span></span>
          </div>
          <div class="flex justify-between items-center bg-rose-500/5 p-3 rounded-lg border border-rose-500/10">
            <span class="text-rose-400/80 text-sm font-medium">未正解の問題</span>
            <span class="font-bold text-rose-500 text-lg"><%= incorrect_quizzes_count %> <span class="text-xs font-normal text-rose-500/50 ml-1">問</span></span>
          </div>
          <div class="flex justify-between items-center bg-emerald-500/5 p-3 rounded-lg border border-emerald-500/10">
            <span class="text-emerald-400/80 text-sm font-medium">正解率</span>
            <span class="font-bold text-emerald-500 text-lg"><%= correct_rate %> <span class="text-xs font-normal text-emerald-500/50 ml-1">%</span></span>
          </div>
        </div>
        <%= link_to reviews_path, class: "btn-primary w-full block text-center py-3 text-sm flex items-center justify-center gap-2" do %>
        <span>間違えた問題に再挑戦 (<%= current_user.weak_quizzes.count %>)</span>
        <span class="text-lg">🔥</span>
        <% end %>
      </div>
    </div>
  </div>
</section>

<%# デモレベル切り替えパネル（デモユーザーのみ表示） %>
<% if ['beginner@example.com', 'expert@example.com'].include?(current_user.email) %>
<section class="mb-12 p-6 rounded-2xl border-2 border-dashed border-white/10 bg-white/5">
  <div class="flex flex-col md:flex-row items-center justify-between gap-6">
    <div class="flex items-center gap-4">
      <div class="w-12 h-12 flex items-center justify-center bg-slate-800 rounded-xl text-2xl shadow-inner">🧪</div>
      <div>
        <h3 class="font-bold text-white">デモレベル切り替え</h3>
        <p class="text-sm text-slate-400">レビュー用にユーザーの状態を即座に切り替えられます</p>
      </div>
    </div>
    <div class="flex gap-3 w-full md:w-auto">
      <%= link_to "初級レベル (Lv.1)", users_demo_sign_in_path(level: 1), data: { "turbo-method": :post }, class: "flex-1 md:flex-none px-4 py-2 rounded-lg border border-accent/30 text-accent font-bold hover:bg-accent/10 transition-colors text-center text-sm" %>
      <%= link_to "上級レベル (Lv.49)", users_demo_sign_in_path(level: 49), data: { "turbo-method": :post }, class: "flex-1 md:flex-none px-4 py-2 rounded-lg border border-orange-500/30 text-orange-500 font-bold hover:bg-orange-500/10 transition-colors text-center text-sm" %>
    </div>
  </div>
</section>
<% end %>

<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
  <h1 class="text-3xl font-black text-white flex items-center gap-3">
    マイコード
    <span class="text-lg font-medium text-slate-500 bg-white/5 px-3 py-1 rounded-lg border border-white/5"><%= current_user.posts.count %></span>
  </h1>
  <%= link_to "新規投稿", new_post_path, class: "btn-primary" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @posts.each do |post| %>
  <div class="glass p-6 rounded-2xl flex flex-col hover:translate-y-[-4px] transition-all duration-300 group">
    <div class="flex items-center justify-between mb-4">
      <span class="text-[10px] uppercase font-bold text-slate-500 bg-white/5 border border-white/10 px-2 py-0.5 rounded">
        � <%= post.quizzes.count %> 問
      </span>
      <div class="flex items-center gap-2">
        <span class="text-[10px] font-mono text-slate-600">
          <%= post.created_at.strftime("%Y/%m/%d") %>
        </span>
        <% unless current_user.demo_user? %>
        <%= button_to post_path(post), method: :delete, form: { data: { turbo_confirm: 'この投稿とすべてのクイズを削除しますか？' }, class: "inline" }, class: "flex items-center gap-1.5 px-3 py-1.5 rounded-lg border border-white/5 bg-white/5 hover:bg-rose-500/10 hover:border-rose-500/30 text-slate-400 hover:text-rose-400 transition-all", title: "投稿を削除する", id: "delete-post-#{post.id}" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        <span class="text-xs font-bold">削除</span>
        <% end %>
        <% end %>
      </div>
    </div>

    <h2 class="text-xl font-bold text-white mb-2 leading-tight group-hover:text-primary transition-colors line-clamp-1">
      <%= link_to post.title, post %>
    </h2>

    <p class="text-slate-400 text-sm mb-6 line-clamp-3 leading-relaxed font-mono break-all">
      <%= post.content %>
    </p>

    <div class="mt-auto">
      <%= link_to post, class: "flex items-center justify-center gap-2 w-full py-2.5 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 text-slate-200 text-sm font-bold transition-all" do %>
      <span>クイズに挑戦する</span>
      <span class="text-xs group-hover:translate-x-1 transition-transform">→</span>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<% else %>
<%# ヒーローセクション（未ログイン） %>
<div class="relative min-h-[80vh] flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 z-0">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/20 blur-[120px] rounded-full"></div>
    <div class="absolute top-1/4 left-1/4 w-[300px] h-[300px] bg-accent/10 blur-[100px] rounded-full animate-float"></div>
  </div>

  <div class="relative z-10 text-center max-w-3xl px-4">
    <h1 class="text-5xl md:text-7xl font-black text-white mb-8 tracking-tighter">
      Code <span class="text-primary italic">Understanding</span> Quiz
    </h1>
    <p class="text-lg md:text-xl text-slate-400 mb-12 leading-relaxed">
      AIがあなたのコードからクイズを自動生成。<br class="hidden md:block">
      コードを深く理解し、レベルアップを目指しましょう !
    </p>

    <div class="flex flex-col items-center gap-6">
      <div class="flex flex-col sm:flex-row gap-4 w-full max-w-md">
        <%= link_to "新規登録", new_user_registration_path, class: "btn-primary py-4 text-center grow" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn-secondary py-4 text-center grow" %>
      </div>

      <div class="w-full max-w-md p-10 rounded-3xl glass relative group text-center">
        <div class="absolute inset-x-0 -top-px h-px bg-gradient-to-r from-transparent via-primary to-transparent"></div>
        <p class="text-slate-500 text-sm mb-6">デモ用です。サンプルデータが入っています。</p>
        <%= link_to users_guest_sign_in_path, data: { "turbo-method": :post }, class: "btn-primary w-full py-5 text-xl relative overflow-hidden group shadow-[0_0_40px_rgba(14,165,233,0.3)]" do %>
        <span class="relative z-10 text-slate-950">ゲストログインで体験する</span>
        <div class="absolute inset-0 bg-white/10 opacity-0 group-hover:opacity-100 transition-opacity"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
