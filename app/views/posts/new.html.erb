<div class="auth-container">
  <div class="auth-card">
    <h1>コードの新規投稿</h1>

    <%= form_with model: @post, local: true do |form| %>
    <% if @post.errors.any? %>
    <div class="alert">
      <p><%= @post.errors.count %> 件のエラーにより保存できませんでした:</p>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-field">
      <%= form.label :title, "タイトル" %>
      <%= form.text_field :title, placeholder: "プログラムの目的など" %>
    </div>

    <div class="form-field">
      <%= form.label :content, "コード" %>
      <%= form.text_area :content, rows: 12, placeholder: "ここにコードを貼り付けてください" %>
    </div>

    <div class="form-actions">
      <%= form.submit "投稿してクイズを作成", class: "button primary" %>
    </div>
    <% end %>

    <div class="auth-links">
      <%= link_to 'ホームに戻る', root_path %>
    </div>
  </div>
</div>
